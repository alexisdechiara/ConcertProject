{% extends 'base.html.twig' %}

{% block title %} Admin - Users {% endblock %}

{% block body %}
    <div class="grid grid-cols-9">
        <div class="col-span-1">
            {% include 'admin/aside.html.twig' %}
        </div>
        <div class="col-span-8">
            <div class="flex flex-col bg-slate-50 h-full p-8">
                <div class="flex flex-col w-full">
                    <div class="overflow-hidden rounded-lg shadow-sm">
                        <table class="w-full">
                            <thead class="bg-white border-b">
                                <tr>
                                    <th scope="col" class="text-sm font-medium text-gray-900 p-4 text-center">id</th>
                                    <th scope="col" class="text-sm font-medium text-gray-900 p-4 text-left">First name</th>
                                    <th scope="col" class="text-sm font-medium text-gray-900 p-4 text-left">Last name</th>
                                    <th scope="col" class="text-sm font-medium text-gray-900 p-4 text-left">Email</th>
                                    <th scope="col" class="text-sm font-medium text-gray-900 p-4 text-left">Role</th>
                                    <th scope="col" class="text-sm font-medium text-gray-900 p-4 text-left">Creation date</th>
                                </tr>
                            </thead>

                            <tbody>
                                {% for user in users  %}
                                    <tr class="bg-white border-b transition duration-300 ease-in-out hover:bg-gray-100">
                                        <td class="text-sm text-gray-900 font-medium p-4 whitespace-nowrap text-center">{{ user.getId() }}</td>
                                        <td class="text-sm text-gray-900 font-light p-4 whitespace-pre-line">{{ user.getFirstName() }}</td>
                                        <td class="text-sm text-gray-900 font-light p-4 whitespace-pre-line">{{ user.getLastName() }}</td>
                                        <td class="text-sm text-gray-900 font-light p-4 whitespace-nowrap">{{ user.getUserIdentifier() }}</td>
                                        <td class="text-sm text-gray-900 font-light p-4 whitespace-nowrap">{% for role in user.getRoles() %} {{ role}} {% endfor %}</td>
                                        <td class="text-sm text-gray-900 font-light p-4 whitespace-nowrap">{{ user.getCreationDate()|date("d/m/Y H:i T") }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



