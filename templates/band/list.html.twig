{% extends 'base.html.twig' %}

{% block title %}ConcertProject - Liste des groupes et artistes{% endblock %}

{% block body %}
    <div class="container p-8 relative">
        <h1 class="text-center text-6xl mt-2 font-medium">Les groupes et artistes</h1>
        <div class="grid grid-cols-4 gap-4 mt-16">
            {% for band in bands %}
                <a href="{{ path('bandShow', {'id': band.getId() }) }}" class="bg-[url('{{ band.getCoverImage() ? vich_uploader_asset(band.getCoverImage(),'file') : band.getArtists()|length != 1 ? vich_uploader_asset(band.getBannerImage(),'file') : vich_uploader_asset((band.getArtists()|first).getPicture(),'file') }}')] bg-origin-border bg-cover bg-top border hover:scale-110 ease-in-out duration-300 rounded overflow-hidden flex-nowrap shadow-md cursor-pointer p-4">
                    <div class="block text-2xl font-bold pt-16 text-white">
                        {{  band.getName() }}
                    </div>
                    <div class="flex flex-row mt-2">
                        {% for style in band.getStyles() %}
                            <div class="inline-block text-md bg-white/50 text-white text-xs px-2 py-0.5 mx-1 border-0 rounded-lg uppercase font-medium">
                                {{ style.getName() }}

                            </div>
                        {% endfor %}
                    </div>
                </a>
            {% endfor %}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('bandNew') }}" data-mdb-ripple="true" data-mdb-ripple-color="light" class="inline-block fixed bottom-8 right-8 cursor-pointer p-2 bg-blue-400 text-white font-medium text-xs leading-tight uppercase rounded-[12px] shadow-md hover:bg-blue-500 hover:shadow-lg focus:bg-blue-500 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-600 active:shadow-lg transition duration-150 ease-in-out">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
            </a>
        {% endif %}
    </div>

{% endblock %}



