{% extends 'base.html.twig' %}

{% block title %}ConcertProject - Liste des concerts{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center text-6xl mt-6 font-medium mb-4">Les concerts</h1>

        {% if todayConcerts is not empty %}
            <h2 class="text-4xl mt-6 font-medium mb-4">Aujourd'hui</h2>

            {% for concert in todayConcerts %}
                <a href="{{ path('concertShow', {'id': concert.getId() }) }}">
                    <img src="{{ concert.getCoverImage() }}" class="h-32 bg-origin-border object-cover object-center border hover:scale-110 ease-in-out duration-300
                       rounded overflow-hidden flex-nowrap shadow-lg cursor-pointer border-0" alt=""/>
                </a>
            {% endfor %}

        {% endif %}

        {% if thisWeekConcerts is not empty %}
            <h2 class="text-4xl mt-6 font-medium mb-4">Cette semaine</h2>

            {% for concert in thisWeekConcerts %}
                <a href="{{ path('concertShow', {'id': concert.getId() }) }}">
                    <img src="{{ concert.getCoverImage() }}" class="h-32 bg-origin-border object-cover object-center border hover:scale-110 ease-in-out duration-300
                       rounded overflow-hidden flex-nowrap shadow-lg cursor-pointer border-0" alt=""/>
                </a>            {% endfor %}

        {% endif %}

        {% if thisMonthConcerts is not empty %}
            <h2 class="text-4xl mt-6 font-medium mb-4">Ce mois-ci</h2>

            {% for concert in thisMonthConcerts %}
                <a href="{{ path('concertShow', {'id': concert.getId() }) }}">
                    <img src="{{ concert.getCoverImage() }}" class="h-32 bg-origin-border object-cover object-center border hover:scale-110 ease-in-out duration-300
                       rounded overflow-hidden flex-nowrap shadow-lg cursor-pointer border-0" alt=""/>
                </a>
            {% endfor %}

        {% endif %}

        {% if otherConcerts is not empty %}
            <h2 class="text-4xl mt-6 font-medium mb-4">Plus tard</h2>
            <div class="grid grid-cols-4 gap-4">

                {% for concert in otherConcerts %}
                    <a href="{{ path('concertShow', {'id': concert.getId() }) }}">
                        {% if concert.getCoverImage() is not empty %}
                            <img src="{{ concert.getCoverImage() }}" class="h-32 bg-origin-border object-cover object-center border hover:scale-110 ease-in-out duration-300
                                                                            rounded overflow-hidden flex-nowrap shadow-lg cursor-pointer border-0" alt=""/>
                        {% elseif concert.getCoverImage() is empty and concert.getCoverImage() is not empty %}
                            <img src="{{ concert.getBannerImage() }}" class="h-32 bg-origin-border object-cover object-center border hover:scale-110 ease-in-out duration-300
                                                                            rounded overflow-hidden flex-nowrap shadow-lg cursor-pointer border-0" alt=""/>
                        {% else %}
                            <img src="" class="h-32 bg-origin-border object-cover object-center border hover:scale-110 ease-in-out duration-300
                                                                            rounded overflow-hidden flex-nowrap shadow-lg cursor-pointer border-0" alt=""/>
                        {% endif %}

                    </a>
                {% endfor %}

            </div>

        {% endif %}

    </div>

{% endblock %}
