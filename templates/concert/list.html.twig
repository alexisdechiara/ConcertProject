{% extends 'base.html.twig' %}

{% block title %}ConcertProject - Liste des concerts{% endblock %}

{% block body %}
    <div class="container p-8 relative">
        <h1 class="text-center text-6xl mt-2 font-medium mb-4">Les concerts</h1>
        {{ include("concert/poster.html.twig", {category: 'Today', concerts: todayConcerts}) }}
        {{ include("concert/poster.html.twig", {category: 'This week', concerts: thisWeekConcerts}) }}
        {{ include("concert/poster.html.twig", {category: 'This month', concerts: thisMonthConcerts}) }}
        {{ include("concert/poster.html.twig", {category: 'Later', concerts: otherConcerts}) }}
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('concertNew') }}" data-mdb-ripple="true" data-mdb-ripple-color="light" class="inline-block fixed bottom-8 right-8 cursor-pointer p-2 bg-blue-400 text-white font-medium text-xs leading-tight uppercase rounded-[12px] shadow-md hover:bg-blue-500 hover:shadow-lg focus:bg-blue-500 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-600 active:shadow-lg transition duration-150 ease-in-out">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
            </a>
        {% endif %}
    </div>

{% endblock %}
