{% if concerts is not empty %}
    <h2 class="text-4xl mt-6 font-medium mb-4">{{ category }}</h2>
    <div class="flex flex-row">
        {% for concert in concerts %}
            <a href="{{ path('concertShow', {'id': concert.getId() }) }}">
                {% if concert.getCoverImage() is not empty %}
                    <img src="{{ vich_uploader_asset(concert.getCoverImage(),'file') }}" class="h-64 aspect-[2/3] bg-origin-border object-cover object-center border hover:scale-110 ease-in-out duration-300
                                                                                        rounded overflow-hidden flex-nowrap shadow-lg cursor-pointer border-0 mr-8" alt=""/>
                {% elseif concert.getCoverImage() is empty and concert.getCoverImage() is not empty %}
                    <img src="{{ vich_uploader_asset(concert.getBannerImage(),'file') }}" class="h-64 aspect-[2/3] bg-origin-border object-cover object-center border hover:scale-110 ease-in-out duration-300
                                                                                        rounded overflow-hidden flex-nowrap shadow-lg cursor-pointer border-0" alt=""/>
                {% else %}
                    <img src="" class="h-64 aspect-[2/3] bg-origin-border object-cover object-center border hover:scale-110 ease-in-out duration-300
                                                                                        rounded overflow-hidden flex-nowrap shadow-lg cursor-pointer border-0" alt=""/>
                {% endif %}
            </a>
        {% endfor %}
    </div>
{% endif %}
