{% extends 'base.html.twig' %}

{% block title %}ConcertProject - Connexion{% endblock %}

{% block body %}
    <div class="container w-1/3">
        <form method="post" class="flex bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col mt-32 ">
            <h1 class="text-center text-4xl font-bold block mb-4">Connexion</h1>
            <div class="mb-3">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Email</label>
                <input type="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" value="{{ last_username }}" name="email" id="email" autocomplete="email" required autofocus>
            </div>
            <div class="mb-3">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">Mot de passe</label>
                <input type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" name="password" id="password" autocomplete="current-password" required>
            </div>

            <div class="mb-3y">
                <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer"/>
                <label for="remember_me" class="form-check-label inline-block text-gray-800 text-sm">Rester connecté</label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {% if error %}
                <div class="text-red-500 text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <button class="mt-6 relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" type="submit">Valider</button>
            <div class="block text-center mt-4">Vous n'avez pas de compte ? <a href="{{ path('app_register') }}" class="text-indigo-600 hover:text-indigo-800 text-center font-medium">Créer</a></div>
        </form>
    </div>
{% endblock %}
